                            Grid.Column="1"
                            MinWidth="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Checked="UnreadBadgeCheckboxToggled"
                            IsChecked="{x:Bind ShowUnreadCount, Mode=OneWay}"
                            Tag="{Binding}"
                            Unchecked="UnreadBadgeCheckboxToggled"
                            Visibility="{x:Bind IsMoveTarget}" />
                    </Grid>
                </Grid>
            </muxc:TreeViewItem>
        </DataTemplate>
    </Page.Resources>

